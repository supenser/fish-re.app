<%= render "shared/second-header" %>

<div class="items-main">
  <div class="items-sell-main">
    <div class="items-sell-title">＜商品の情報を入力＞</div>
    <%= form_with model: @item, local: true do |f| %>

<%# 商品画像 %>
  <div class='sub-text'>
  <div class='twin-text'>
    <div class="img-upload">
      <div class="input-title">
        （商品画像）
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /商品画像 %>

    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="input-title">
        （商品名）
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="input-title">
          （商品の説明）
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title_text, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>
  </div>
  <div class='twin-text'>
    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="form">
        <div class="input-title">
          （魚の鮮度状況）
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:fish_fresh_id, FishFresh.all, :id, :name, {}, {class:"select-box", id:"fish-fresh"}) %>
        <div class="input-title">
          （商品の販売状態）
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:fish_recipe_id, FishRecipe.all, :id, :name, {}, {class:"select-box", id:"fish-recipe"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 販売価格 %>
    <div class="sell-price">
      <div class="input-title">
        <span>（販売価格）<span class="indispensable">必須</span>
        <br>(¥50~999,999)</span>
      </div>
      <div>
        <div class="price-content">
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
      </div>
    </div>
    <%# /販売価格 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
    <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>