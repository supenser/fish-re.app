<!--メイン-->
<%= render "shared/header" %>
<body>
  <div class="fv-container">
    
      <%# 商品一覧 %>
    <div class='item-contents'>
        <h2 class='title'>＜本日のお魚はこちら＞</h2>
          <ul class='item-lists'>
            <% @items.each do |i| %>
                <li class='list'>
                    <div class='item-img-content'>
                    <%= image_tag i.image, class: "item-img" %>
                    </div>
                    <div class='item-name'>
                    <%= i.title %>
                    </div>
                    <div class='item-price'>
                    <%= i.price %>円
                    </div>
                </li>
            <% end %>
          </ul>
    </div>
  </div>
</body>
<%= render "shared/footer" %>